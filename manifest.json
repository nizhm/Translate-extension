{
  "manifest_version": 3,
  "name": "Transl",
  "version": "1.0",
  "description": "A browser extension for translating word and paragraph",
  "icons": {
    "16": "images/main_icon.png",
    "32": "images/main_icon.png",
    "48": "images/main_icon.png",
    "128": "images/main_icon.png"
  },
  "content_scripts": [
    {
      "js": ["main.js"],
      "matches": [
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*"
      ]
    }
  ]
}
