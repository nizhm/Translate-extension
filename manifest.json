{
  "manifest_version": 3,
  "name": "Transl",
  "version": "1.0",
  "description": "A browser extension for translating word and paragraph",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "images/main_icon.png",
    "32": "images/main_icon.png",
    "48": "images/main_icon.png",
    "128": "images/main_icon.png"
  },
  "action": {
    "default_icon": {
      "16": "images/main_icon.png",
      "32": "images/main_icon.png",
      "48": "images/main_icon.png",
      "128": "images/main_icon.png"
    },
    "default_title": "A extension for translating english word and paragraph"
  },
  "background": {
    "service_worker": "main.js",
    "type": "module"
  }
}
